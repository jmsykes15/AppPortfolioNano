<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tk.lineware.jmsykes15.portfolioapplication.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#f0eef5">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Portfolio Header Begin -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <!-- Title Begin -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Portfolio"
                android:textAlignment="center"
                android:textSize="32sp"
                android:layout_marginTop="16dp"/>
            <!-- Title End -->

            <!-- Profile Begin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Profile Picture -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:id="@+id/imageView"
                    android:src="@mipmap/profile_picture"
                    android:layout_weight="1" />

                <!-- Profile Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:layout_margin="4dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:layout_margin="4dp"
                        android:textSize="8sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_margin="4dp"
                        android:textSize="8sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bio"
                        android:layout_margin="4dp"
                        android:textSize="8sp"/>
                </LinearLayout>

            </LinearLayout>
            <!-- Profile End -->
        </LinearLayout>
        <!-- Portfolio Header End -->

        <!-- Devider Bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray"/>

        <!-- Body Begin -->
        <!-- First Row of Apps -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <!-- spotify streamer Apps -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="spotifyStreamerPressed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="spotify streamer"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- scores Apps -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton1"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="libraryAppPressed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="scores app"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"
                    android:onClick="scoresAppPressed"/>
            </LinearLayout>

            <!-- library App -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="libraryAppPressed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="library app"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Devider Bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray"/>

        <!-- Second Row of Apps -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <!-- build it bigger App -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton3"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="buildItBiggerPressed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="build it bigger"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- xyz reader App -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton4"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="XYZReaderPressed"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="xyz reader"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- capstone: my own App -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:background="#cd0e3e">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton5"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="capstoneMyOwnApp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="capstone:"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="my own app"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Devider Bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray"/>

        <!-- Third Row of Apps -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <!-- Pending App -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton6"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="noApp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Pending App -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton7"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="noApp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Pending App -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="16dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton8"
                    android:src="@mipmap/temp_icon"
                    android:paddingTop="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:onClick="noApp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textAllCaps="true"
                    android:textSize="8sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <!-- Body End -->
    </LinearLayout>
</ScrollView>
